<?xml version="1.0" encoding="utf-8"?>
<!-- Tạo linearLayout chính-->
<LinearLayout
    android:weightSum="8"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Tạo LinearLayout vùng 1 theo chiều Vertical-->
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <!--Phân chia vùng 1 thành 2 vùng-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:background="#FF4500"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:background="#FFD700"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <!--Tạo LinearLayout vùng 2 theo chiều Vertical-->
    <LinearLayout
        android:layout_weight="5"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!--Phân chia vùng 2 thành 2 vùng theo chiều ngang-->
        <LinearLayout
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--Phân chia vùng 2 thành 2 phần bằng nhau theo chiều dọc-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:background="#228B22"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:background="#A52A2A"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:background="#6495ED"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <!--Tạo LinearLayout vùng 3 theo chiều Vertical-->
    <LinearLayout
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <!--Phân chia vùng 3 thành 2 phần-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--Tạo Textview tương ứng-->
            <TextView
                android:background="#FF7F50"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--Tạo Textview tương ứng-->
            <TextView
                android:background="#4169E1"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>